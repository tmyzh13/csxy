<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg">

    <com.bm.csxy.widget.NavBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nav"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingTop="15dp"
        android:background="@color/white"
        >
        <TextView
            style="@style/text_normal"
            android:textColor="@color/text_color_main"
            android:textSize="16sp"
            android:id="@+id/tv_product_name"
            android:text="天门狐仙普通座"
            />
        <TextView
            style="@style/text_normal"
            android:id="@+id/tv_customer_center"
            android:text="@string/choice_product_customer_center"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <TextView
                style="@style/text_normal"
                android:textColor="@color/app_yellow"
                android:id="@+id/tv_score"
                android:textSize="16sp"
                />
            <TextView
                style="@style/text_normal"
                android:textColor="@color/app_yellow"

                android:text="分"
                />
            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ratingBar"
                android:layout_centerHorizontal="true"
                style="@style/redRatingBar"
                android:numStars="5"
                android:stepSize="0.5"
                android:rating="0"
                android:isIndicator="true"
                android:layout_marginRight="5dp"
                android:layout_marginTop="21dp"
                android:visibility="gone"/>
            <TextView
                android:layout_marginLeft="10dp"
                style="@style/text_normal"
                android:textColor="@color/text_color_main"
                android:id="@+id/tv_num"
                />
            <TextView
                style="@style/text_normal"
                android:textColor="@color/text_color_main"
                android:text="人评分"
                />
        </LinearLayout>
    </LinearLayout>
    <com.corelibs.views.ptr.layout.PtrAutoLoadMoreLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ptrlayout">
        <com.corelibs.views.ptr.loadmore.widget.AutoLoadMoreListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lv_evaluation"
            android:dividerHeight="0dp"
            android:listSelector="@color/transparent"
            android:layout_marginTop="5dp"
            />
    </com.corelibs.views.ptr.layout.PtrAutoLoadMoreLayout>
</LinearLayout>