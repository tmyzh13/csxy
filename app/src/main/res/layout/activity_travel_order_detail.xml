<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg">
    <com.bm.csxy.widget.NavBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nav"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@color/white"
                >
                <TextView
                    style="@style/text_normal"
                    android:textColor="@color/text_color_main"
                    android:text="@string/travel_order_detail_name"
                    />
                <TextView
                    style="@style/text_normal"
                    android:textColor="@color/text_color_main"
                    android:id="@+id/tv_travel_order_detail_name"
                    android:layout_alignParentRight="true"
                    android:text="天门狐仙"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@color/white"
                android:layout_marginTop="1dp"
                >
                <TextView
                    style="@style/text_normal"
                    android:textColor="@color/text_color_main"
                    android:text="@string/travel_order_detail_num"
                    />
                <TextView
                    android:layout_marginLeft="20dp"
                    style="@style/text_normal"
                    android:textColor="@color/text_color_main"
                    android:id="@+id/tv_travel_order_detail_num"
                    android:layout_alignParentRight="true"
                    android:text="180232222222222222222222"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@color/white"
                android:layout_marginTop="1dp"
                >
                <TextView
                    style="@style/text_normal"
                    android:textColor="@color/text_color_main"
                    android:text="@string/travel_order_detail_time"
                    />
                <TextView
                    android:layout_marginLeft="20dp"
                    style="@style/text_normal"
                    android:textColor="@color/text_color_main"
                    android:id="@+id/tv_travel_order_detail_time"
                    android:layout_alignParentRight="true"
                    android:text="2017-10-24"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@color/white"
                android:layout_marginTop="1dp"
                >
                <TextView
                    style="@style/text_normal"
                    android:textColor="@color/text_color_main"
                    android:text="@string/travel_order_detail_total_price"
                    />
                <TextView
                    android:layout_marginLeft="20dp"
                    style="@style/text_normal"
                    android:textColor="@color/text_color_main"
                    android:id="@+id/tv_travel_order_detail_total_price"
                    android:layout_alignParentRight="true"
                    android:text="188"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@color/white"
                android:layout_marginTop="1dp"
                >
                <TextView
                    style="@style/text_normal"
                    android:textColor="@color/text_color_main"
                    android:text="@string/travel_order_detail_pay_time"
                    />
                <TextView
                    android:layout_marginLeft="20dp"
                    style="@style/text_normal"
                    android:textColor="@color/text_color_main"
                    android:id="@+id/tv_travel_order_detail_pay_time"
                    android:layout_alignParentRight="true"
                    android:text="2017-10-24"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@color/white"
                android:layout_marginTop="1dp"
                >
                <TextView
                    style="@style/text_normal"
                    android:textColor="@color/text_color_main"
                    android:text="@string/travel_order_detail_count"
                    />
                <TextView
                    android:layout_marginLeft="20dp"
                    style="@style/text_normal"
                    android:textColor="@color/text_color_main"
                    android:id="@+id/tv_travel_order_detail_count"
                    android:layout_alignParentRight="true"
                    android:text="2"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@color/white"
                android:layout_marginTop="1dp"
                >
                <TextView
                    style="@style/text_normal"
                    android:textColor="@color/text_color_main"
                    android:text="@string/travel_order_time"
                    />
                <TextView
                    android:layout_marginLeft="20dp"
                    style="@style/text_normal"
                    android:textColor="@color/text_color_main"
                    android:id="@+id/tv_travel_order_time"
                    android:layout_alignParentRight="true"
                    android:text="2017-10-24"
                    />
            </RelativeLayout>
            <com.corelibs.views.NoScrollingListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:dividerHeight="1dip"
                android:divider="@color/bg"
                android:scrollbars="none"
                android:listSelector="@color/transparent"
                android:cacheColorHint="@color/bg"
                android:id="@+id/lv_info"
                android:layout_marginTop="1dp"
                />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@color/white"
            android:id="@+id/ll_custom"
            >
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/icn_phone"
                />
            <TextView
                style="@style/text_normal"
                android:text="@string/travel_order_detail_dianhua"
                android:textColor="@color/text_color_main"
                />
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@color/white"
            android:id="@+id/ll_chat"
            >
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/icn_custom"
                />
            <TextView
                android:layout_marginLeft="5dp"
                style="@style/text_normal"
                android:text="@string/travel_order_detail_customer"
                android:textColor="@color/text_color_main"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>