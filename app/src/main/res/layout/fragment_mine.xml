<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg">

    <com.bm.csxy.widget.NavBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nav"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:orientation="vertical"
                android:gravity="center"
                >
                <com.bm.csxy.widget.CircleImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:id="@+id/iv_user_icon"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/bg"/>
            <RelativeLayout
                android:id="@+id/my_password_rl"
                android:layout_width="match_parent"
                android:layout_height="45dp"

                android:background="@color/white">
                <ImageView
                    android:id="@+id/password_iv"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@mipmap/alter_password"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="修改密码"
                    android:textSize="14sp"
                    android:textColor="@color/text_color_shallow"
                    android:layout_toRightOf="@id/password_iv"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/go_right"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bg"
                android:layout_marginLeft="10dp"/>

            <RelativeLayout
                android:id="@+id/my_order_rl"
                android:layout_width="match_parent"
                android:layout_height="45dp"

                android:background="@color/white">
                <ImageView
                    android:id="@+id/order_iv"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@mipmap/my_order_"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的订单"
                    android:textSize="14sp"
                    android:textColor="@color/text_color_shallow"
                    android:layout_toRightOf="@id/order_iv"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/go_right"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bg"
                android:layout_marginLeft="10dp"/>

            <RelativeLayout
                android:id="@+id/rl_msg"
                android:layout_width="match_parent"
                android:layout_height="45dp"

                android:background="@color/white">
                <ImageView
                    android:id="@+id/msg_iv"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@mipmap/my_order"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的消息"
                    android:textSize="14sp"
                    android:textColor="@color/text_color_shallow"
                    android:layout_toRightOf="@id/msg_iv"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/go_right"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>
            <Button
                android:id="@+id/mine_exit"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp" android:layout_marginRight="20dp"
                android:background="@drawable/btn_blue_bg"
                android:gravity="center"
                android:text="退出当前账号"
                android:textColor="@android:color/white"
                android:textSize="16sp"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>